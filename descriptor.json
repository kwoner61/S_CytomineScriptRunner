{
    "name": "CytomineScriptRunner",
    "description": "This Cytomine App will run image segmentation using K-Means.",
    "schema-version": "cytomine-0.1",
    "command-line": "python /CytomineScriptRunner/app.py [CYTOMINE_HOST] [CYTOMINE_PUBLIC_KEY] [CYTOMINE_PRIVATE_KEY] [CYTOMINE_ID_PROJECT] [CYTOMINE_ID_SOFTWARE] [CYTOMINE_ID_TERMS] [MAX_SIZE]",
    "container-image": {
        "image": "dockerlamis/s_cytominescriptrunner",
        "type": "singularity"
    },
    "inputs": [{
            "id": "cytomine_host",
            "name": "Cytomine host",
            "set-by-server": true,
            "optional": false,
            "type": "String",
            "value-key": "[@ID]",
            "command-line-flag": "--@id"
        },
        {
            "id": "cytomine_public_key",
            "name": "Cytomine public key",
            "set-by-server": true,
            "optional": false,
            "type": "String",
            "value-key": "[@ID]",
            "command-line-flag": "--@id"
        },
        {
            "id": "cytomine_private_key",
            "name": "Cytomine private key",
            "set-by-server": true,
            "optional": false,
            "type": "String",
            "value-key": "[@ID]",
            "command-line-flag": "--@id"
        },
        {
            "id": "cytomine_id_project",
            "name": "Cytomine project ID",
            "set-by-server": true,
            "optional": false,
            "type": "Number",
            "value-key": "[@ID]",
            "command-line-flag": "--@id"
        },
        {
            "id": "cytomine_id_software",
            "name": "Cytomine software ID",
            "set-by-server": true,
            "optional": false,
            "type": "Number",
            "value-key": "[@ID]",
            "command-line-flag": "--@id"
        },
        {
            "id": "cytomine_id_terms",
            "name": "Terms to analyze",
            "set-by-server": false,
            "optional": false,
            "type": "ListDomain",
            "value-key": "[@ID]",
            "command-line-flag": "--@id",
            "uri": "/api/ontology/$currentOntology$/term.json",
            "uri-print-attribute": "name",
            "uri-sort-attribute": "name"
        },
        {
            "id": "max_size",
            "name": "Max width of annotation to analyze",
            "set-by-server": false,
            "optional": true,
            "type": "Number",
            "value-key": "[@ID]",
            "command-line-flag": "--@id",
            "default-value": 512
        }
    ]
}
