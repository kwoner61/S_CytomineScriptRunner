{
    "name": "CytomineScriptRunner",
    "description": "This Cytomine App will run image segmentation using K-Means clustering.",
    "schema-version": "cytomine-0.1",
    "command-line": "python /CytomineScriptRunner/app.py [CYTOMINE_HOST] [CYTOMINE_PUBLIC_KEY] [CYTOMINE_PRIVATE_KEY] [CYTOMINE_ID_PROJECT] [CYTOMINE_ID_SOFTWARE] [CYTOMINE_ID_TERMS] [MAX_SIZE] [COLOR_1] [COLOR_2] [COLOR_3] [COLOR_4] [COLOR_5]",
    "container-image": {
        "image": "dockerlamis/s_cytominescriptrunner",
        "type": "singularity"
    },
    "inputs": [{
            "id": "cytomine_host",
            "name": "Cytomine host",
            "set-by-server": true,
            "optional": false,
            "type": "String",
            "value-key": "[@ID]",
            "command-line-flag": "--@id"
        },
        {
            "id": "cytomine_public_key",
            "name": "Cytomine public key",
            "set-by-server": true,
            "optional": false,
            "type": "String",
            "value-key": "[@ID]",
            "command-line-flag": "--@id"
        },
        {
            "id": "cytomine_private_key",
            "name": "Cytomine private key",
            "set-by-server": true,
            "optional": false,
            "type": "String",
            "value-key": "[@ID]",
            "command-line-flag": "--@id"
        },
        {
            "id": "cytomine_id_project",
            "name": "Cytomine project ID",
            "set-by-server": true,
            "optional": false,
            "type": "Number",
            "value-key": "[@ID]",
            "command-line-flag": "--@id"
        },
        {
            "id": "cytomine_id_software",
            "name": "Cytomine software ID",
            "set-by-server": true,
            "optional": false,
            "type": "Number",
            "value-key": "[@ID]",
            "command-line-flag": "--@id"
        },
        {
            "id": "cytomine_id_terms",
            "name": "Terms to analyze",
            "set-by-server": false,
            "optional": false,
            "type": "ListDomain",
            "value-key": "[@ID]",
            "command-line-flag": "--@id",
            "uri": "/api/ontology/$currentOntology$/term.json",
            "uri-print-attribute": "name",
            "uri-sort-attribute": "name"
        },
        {
            "id": "max_size",
            "name": "Max width of annotation to analyze",
            "set-by-server": false,
            "optional": true,
            "type": "Number",
            "value-key": "[@ID]",
            "command-line-flag": "--@id",
            "default-value": 512
        },
        {
            "id": "color_1",
            "name": "Replacement color 1: R,G,B",
            "set-by-server": false,
            "optional": true,
            "type": "String",
            "value-key": "[@ID]",
            "command-line-flag": "--@id",
            "default-value": "184,113,143"
        },
        {
            "id": "color_2",
            "name": "Replacement color 2: R,G,B",
            "set-by-server": false,
            "optional": true,
            "type": "String",
            "value-key": "[@ID]",
            "command-line-flag": "--@id",
            "default-value": "140,108,77"
        },
        {
            "id": "color_3",
            "name": "Replacement color 3: R,G,B",
            "set-by-server": false,
            "optional": true,
            "type": "String",
            "value-key": "[@ID]",
            "command-line-flag": "--@id",
            "default-value": "134,50,88"
        },
        {
            "id": "color_4",
            "name": "Replacement color 4: R,G,B",
            "set-by-server": false,
            "optional": true,
            "type": "String",
            "value-key": "[@ID]",
            "command-line-flag": "--@id",
            "default-value": "230,230,230"
        },
        {
            "id": "color_5",
            "name": "Replacement color 5: R,G,B",
            "set-by-server": false,
            "optional": true,
            "type": "String",
            "value-key": "[@ID]",
            "command-line-flag": "--@id",
            "default-value": "30,30,30"
        }
    ]
}
